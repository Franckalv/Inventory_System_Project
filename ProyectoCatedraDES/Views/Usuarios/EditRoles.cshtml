@model ProyectoCatedraDES.Models.EditUserRolesVM
@{
    ViewData["Title"] = "Editar roles";
}

<h2>Editar roles</h2>
<p><strong>Usuario:</strong> @Model.Email</p>

<form asp-action="EditRoles" method="post">
    <input type="hidden" asp-for="UserId" />
    <div class="mb-3">
        @for (int i = 0; i < Model.Roles.Count; i++)
        {
            <div class="form-check">
                <input class="form-check-input" asp-for="Roles[i].Selected" />
                <label class="form-check-label">@Model.Roles[i].Name</label>
                <input type="hidden" asp-for="Roles[i].Name" />
            </div>
        }
    </div>
    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Volver</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
