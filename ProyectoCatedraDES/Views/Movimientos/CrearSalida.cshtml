@model ProyectoCatedraDES.Models.MovimientoCreateVM
@{
    ViewData["Title"] = "Registrar salida";
}

<h3 class="mb-3">Salida — @Model.ProductoNombre</h3>

<!-- Summary visible para errores del ModelState -->
<div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

<form asp-action="CrearSalida" method="post" novalidate>
    <input type="hidden" asp-for="ProductoId" />

    <div class="mb-3">
        <label asp-for="Cantidad" class="form-label"></label>
        <input asp-for="Cantidad" class="form-control" />
        <span asp-validation-for="Cantidad" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Comentario" class="form-label"></label>
        <input asp-for="Comentario" class="form-control" />
        <span asp-validation-for="Comentario" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-warning">Registrar salida</button>
    <a asp-action="Index" asp-route-productoId="@Model.ProductoId" class="btn btn-secondary ms-2">Cancelar</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
