@model ProyectoCatedraDES.Models.DashboardVM
@{
    ViewData["Title"] = "Dashboard";
}

<h2 class="mb-3">Dashboard</h2>

<div class="row g-3">
    <div class="col-md-3">
        <div class="card shadow-sm">
            <div class="card-body">
                <div class="fw-bold text-muted">Productos</div>
                <div class="display-6">@Model.TotalProductos</div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card shadow-sm">
            <div class="card-body">
                <div class="fw-bold text-muted">Stock total</div>
                <div class="display-6">@Model.TotalStock</div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card shadow-sm @(Model.EnAlerta > 0 ? "border-danger" : "")">
            <div class="card-body">
                <div class="fw-bold text-muted">En alerta</div>
                <div class="display-6">
                    @Model.EnAlerta
                    @if (Model.EnAlerta > 0)
                    {
                        <span class="badge bg-danger ms-2">Bajo</span>
                    }
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card shadow-sm">
            <div class="card-body">
                <div class="fw-bold text-muted">Movimientos hoy</div>
                <div class="display-6">@Model.MovimientosHoy</div>
            </div>
        </div>
    </div>
</div>

<div class="row g-3 mt-1">
    <div class="col-lg-7">
        <div class="card shadow-sm">
            <div class="card-header">Entradas vs Salidas (últimos 7 días)</div>
            <div class="card-body">
                <canvas id="chart7d" height="110"></canvas>
            </div>
        </div>
    </div>
    <div class="col-lg-5">
        <div class="card shadow-sm">
            <div class="card-header">Stock bajo</div>
            <div class="card-body p-0">
                @if (!Model.StockBajo.Any())
                {
                    <div class="p-3">Sin alertas por ahora.</div>
                }
                else
                {
                    <table class="table table-sm table-striped mb-0">
                        <thead>
                            <tr><th>Código</th><th>Producto</th><th class="text-end">Stock</th><th class="text-end">Mín.</th></tr>
                        </thead>
                        <tbody>
                            @foreach (var p in Model.StockBajo)
                            {
                                <tr class="table-danger">
                                    <td>@p.Codigo</td>
                                    <td>@p.Nombre</td>
                                    <td class="text-end">@p.StockActual</td>
                                    <td class="text-end">@p.StockMinimo</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
            </div>
            <div class="card-footer text-end">
                <a class="btn btn-sm btn-outline-primary" asp-controller="Alertas" asp-action="Index">Ver alertas</a>
            </div>
        </div>
    </div>
</div>

<div class="card shadow-sm mt-3">
    <div class="card-header">Últimos movimientos</div>
    <div class="card-body p-0">
        @if (!Model.UltimosMovimientos.Any())
        {
            <div class="p-3">Aún no hay movimientos.</div>
        }
        else
        {
            <table class="table table-striped mb-0 align-middle">
                <thead>
                    <tr>
                        <th>Fecha</th>
                        <th>Producto</th>
                        <th>Tipo</th>
                        <th class="text-end">Cantidad</th>
                        <th>Usuario</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var m in Model.UltimosMovimientos)
                    {
                        var isEntrada = m.Tipo == "Entrada";
                        <tr>
                            <td>@m.Fecha.ToLocalTime().ToString("g")</td>
                            <td>@m.Producto</td>
                            <td>
                                @if (isEntrada)
                                {
                                    <span class="badge bg-success">Entrada</span>
                                }
                                else
                                {

                                    <span class="badge bg-warning text-dark">Salida</span>
                                }
                            </td>
                            <td class="text-end">@m.Cantidad</td>
                            <td>@m.Usuario</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
    <div class="card-footer text-end">
        <a class="btn btn-sm btn-outline-secondary" asp-controller="Movimientos" asp-action="Index">Ver todos</a>
    </div>
</div>

@section Scripts {
    <!-- Chart.js via CDN -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        const labels = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.Labels7d));
        const dataEntrada = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.Entradas7d));
        const dataSalida  = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.Salidas7d));

        const ctx = document.getElementById('chart7d');
        new Chart(ctx, {
            type: 'line',
            data: {
                labels,
                datasets: [
                    { label: 'Entradas', data: dataEntrada, tension: .3 },
                    { label: 'Salidas',  data: dataSalida,  tension: .3 }
                ]
            },
            options: {
                responsive: true,
                plugins: { legend: { position: 'top' } },
                scales: { y: { beginAtZero: true, ticks: { precision: 0 } } }
            }
        });
    </script>
}
