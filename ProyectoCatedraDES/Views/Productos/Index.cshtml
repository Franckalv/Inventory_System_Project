@model IEnumerable<ProyectoCatedraDES.Models.Producto>
@{
    ViewData["Title"] = "Productos";
}
<h2 class="mb-3">Productos</h2>

<p class="d-flex gap-2">
    <a class="btn btn-primary" asp-action="Create">Nuevo producto</a>
    <!-- Reportes de productos -->
    <a class="btn btn-outline-success" asp-action="ExportarExcel">Exportar Excel</a>
    <a class="btn btn-outline-danger" asp-action="ExportarPdf">Exportar PDF</a>
</p>

<table class="table table-striped align-middle">
    <thead>
        <tr>
            <th>Código</th>
            <th>Nombre</th>
            <th class="w-25">Descripción</th>
            <th class="text-end">Precio</th>
            <th class="text-end">Stock</th>
            <th class="text-end">Mínimo</th>
            <th class="text-nowrap">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            var bajo = item.StockActual <= item.StockMinimo;
            <tr class="@(bajo ? "table-danger" : "")">
                <td>@item.Codigo</td>
                <td>@item.Nombre</td>
                <td>@item.Descripcion</td>
                <td class="text-end">@String.Format("{0:N2}", item.Precio)</td>
                <td class="text-end">
                    @item.StockActual
                    @if (bajo)
                    {
                        <span class="badge bg-danger ms-1">Bajo</span>
                    }
                </td>
                <td class="text-end">@item.StockMinimo</td>
                <td class="text-nowrap">
                    <!-- CRUD -->
                    <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                    <a class="btn btn-sm btn-outline-secondary" asp-action="Details" asp-route-id="@item.Id">Detalles</a>
                    <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>

                    <!-- Inventario -->
                    <a class="btn btn-sm btn-success" asp-controller="Movimientos" asp-action="CrearEntrada" asp-route-productoId="@item.Id">Entrada</a>
                    <a class="btn btn-sm btn-warning" asp-controller="Movimientos" asp-action="CrearSalida" asp-route-productoId="@item.Id">Salida</a>
                    <a class="btn btn-sm btn-info" asp-controller="Movimientos" asp-action="Index" asp-route-productoId="@item.Id">Movs</a>

                    <!-- Reportes de Movimientos por producto (opcional) -->
                    <a class="btn btn-sm btn-outline-success" asp-controller="Movimientos" asp-action="ExportarExcel" asp-route-productoId="@item.Id">Excel Movs</a>
                    <a class="btn btn-sm btn-outline-danger" asp-controller="Movimientos" asp-action="ExportarPdf" asp-route-productoId="@item.Id">PDF Movs</a>
                </td>
            </tr>
        }
    </tbody>
</table>
